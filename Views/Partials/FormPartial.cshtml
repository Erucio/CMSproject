@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

<!--Form-->

    <section class="form-page">
        <div class="contact-boxes container">
            <div class="box">
                <div class="circle">
                    <i class="fa-sharp fa-regular fa-location-dot" style="color: #ffffff;"></i>
                </div>
                <div class="details">
                    <p><b>Visit Us</b></p>
                    <p>Sveavägen 31, <br>111 34 Stockholm</p>
                </div>
            </div>
            <div class="box">
                <div class="circle">
                    <i class="fa-solid fa-phone" style="color: #ffffff;"></i>
                </div>
                <div class="details">
                    <p><b>Call Us</b></p>
                    <p>+46 (8) 424 25 64 <br>+46 (8) 424 25 42</p>
                </div>
            </div>
            <div class="box">
                <div class="circle">
                    <i class="fa-sharp fa-regular fa-location-dot" style="color: #ffffff;"></i>
                </div>
                <div class="details">
                    <p><b>Email Us</b></p>
                    <p>info@crito.com <br>support@crito.com</p>
                </div>
            </div>

        </div>
        <div class="form">
            <div class="container">
                @using (Html.BeginUmbracoForm("Index", "Contact", "post"))
            {
                <div asp-validation-summary="ModelOnly"></div>
                <h1>Leave us a message for <br>any information</h1>
                <input asp-for="@contactForm.Name" type="text" placeholder="Name">
                <input asp-for="@contactForm.Email" type="email" placeholder="Email">
                <textarea asp-for="@contactForm.Message" placeholder="Your message"></textarea>
                <button type="submit" class="theme-button">Send Message <i class="fa-light fa-arrow-up-right"></i></button>

            }
            </div>
        </div>
    </section>